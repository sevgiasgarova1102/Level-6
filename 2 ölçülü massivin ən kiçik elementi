#include <iostream>
using namespace std;

void Min(int a[][3], int setir, int sutun) {
    int mini = a[0][0];

    for (int i = 0; i < setir; i++)
        for (int j = 0; j < sutun; j++)
            if (a[i][j] < min)
                min = a[i][j];

    cout << "Min = " << min << endl;
}

int main() {
    int a[2][3] = {
        {4, 8, 3},
        {6, 10, 1}
    };

    Mina, 2, 3);

    return 0;
}
